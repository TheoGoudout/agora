{
  "name": "agora",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/www"
  },
  "dependencies": {
    "node-sass": "~3.8.0",
    "npm-watch": "~0.1.5",
    "uglify-js": "~2.7.0"
  },
  "watch": {
    "sass": "public/sass",
    "uglify-js": "public/js"
  },
  "scripts": {
    "sass": "cd public && node-sass sass --output css --output-style compressed --source-map true",
    "uglify-js": "cd public/js && uglifyjs *.js --output main.min.js --source-map main.min.js.map",
    "watch": "npm-watch"
  }
}
